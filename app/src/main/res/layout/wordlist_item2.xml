<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/recycler_item2"

    android:layout_margin="6dp"
    >

    <TextView
        android:id="@+id/tv"
        style="@style/word_title"
        android:text="De :"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/tvdep"
        android:layout_alignBottom="@+id/tvdep"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvdep"
        style="@style/word_title"
        android:layout_width="wrap_content"
        android:text="ooooooooo"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/tv"
        android:layout_toEndOf="@+id/tv" />

    <TextView
        android:id="@+id/tv1"
        style="@style/word_title"
        android:text="Vers :"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvdep"
        android:layout_alignBottom="@+id/tvdep"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvdest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/word_title"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignLeft="@+id/tv_etu"
        android:layout_alignStart="@+id/tv_etu" />

    <TextView
        android:id="@+id/textView10"
        style="@style/word_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Notification de l'Ã©tudiant :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_etu"
        style="@style/word_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        style="@style/word_title"
        android:textStyle="bold"
        android:layout_below="@+id/tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/word_title"
        android:textStyle="bold"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/tvdate"
        android:layout_alignBottom="@+id/tvdate"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1" />


</RelativeLayout>