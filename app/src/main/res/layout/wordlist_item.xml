<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/recycler_item"

    android:layout_margin="6dp"
    >

    <TextView
        android:id="@+id/tv"
        style="@style/word_title"
        android:text="De :"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/word"
        android:layout_alignBottom="@+id/word"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/word"
        style="@style/word_title"
        android:layout_width="wrap_content"
        android:text="ooooooooo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/tv"
        android:layout_toEndOf="@+id/tv" />

    <TextView
        android:id="@+id/tv1"
        style="@style/word_title"
        android:text="Vers :"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/word"
        android:layout_alignBottom="@+id/word"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="choisir"
        android:textColor="@color/yellow"
        android:background="@drawable/recycle_button"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:text="TextView"
        style="@style/word_title"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignTop="@+id/tv1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/word_title"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:text="Etudiant :" />

    <TextView
        android:id="@+id/tv_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginLeft="11dp"
        style="@style/word_title"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_date_cov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv"
        style="@style/word_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/word_title"
        android:text="TextView"
        android:layout_alignBaseline="@+id/tv_date_cov"
        android:layout_alignBottom="@+id/tv_date_cov"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignEnd="@+id/tv1" />


</RelativeLayout>